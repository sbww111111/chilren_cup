
.bcground {
		background-color: #c3d1ec;
		width: 100%;
		height: 100%;
		position: absolute;
}
.uni-margin-wrap {
		width: auto;
		padding-top: 7vh;
}
.swiper {
		height: 240rpx;
		width: 90%;
		/* display: block; */
		text-align: center;
		border: 8px solid #627fb4;
		margin-left: 3vw;
		border-radius: 8px;
}
.swiper-item {
		display: block;
		height: 240rpx;
		line-height: 240rpx;
		text-align: center;
}
.shuibei {
		width: 65%;
		height: 50%;
		padding-top: 40%;
		padding-left: 7%;
}
.dianchi {
		position: relative;
		width: 100%;
		height: 16%;
		top: 15%;
}
.dianliang {
		z-index: 2;
		font-size:1.5rem;
		color: white;
		font-weight: bold;
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		width: 100%;
		height: 100%;
}
.shuiliang {
		width: 40vw;
		height: calc(80vh - 7% - 240rpx);
		position: relative;
}
.menban {
		position: absolute;
		width: 35%;
		height: 10%;
		background-color: #c3d1ec;
		z-index: 4;
		left: 40.9%;
		top: 7%;
		border-radius: 35px;
}
.shuidi {
		width: 58%;
		height: 13%;
		position: absolute;
		z-index: 4;
		left: 30%;
}
